<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weijun.multiplexedqr">

    <uses-sdk android:minSdkVersion="11" />

    <!-- hardware -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.microphone" />

    <!-- permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label= "@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name=".DisplayQRActivity" />
        <activity
            android:name=".DisplayBitmap"
            android:label="@string/title_activity_display_bitmap" />
        <activity
            android:name=".SenderView"
            android:label="@string/title_activity_sender_screen" />
        <activity
            android:name=".DisplayPortQR"
            android:label="@string/title_activity_display_port_qr" />
        <activity
            android:name=".MutualPasscode"
            android:label="@string/title_activity_mutual_passcode">
        </activity>
        <activity
            android:name=".ReceiverView"
            android:label="@string/title_activity_receiver_view" />
        <activity
            android:name=".ReceiverInputView"
            android:label="@string/title_activity_receiver_input_view"></activity>


    </application>

</manifest>